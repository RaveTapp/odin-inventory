<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %> <%= product.name %></h1>
    <%- include("partials/errors.ejs") %>
    <form action="/category/<%= categoryId %>/update/<%= product.id %>" method="POST">
      <input
        type="text"
        name="productName"
        value="<%= product.name %>"
        required
      />
      <button type="submit">Update Product</button>
    </form>
    <a href="/category/<%= categoryId %>">Back to category</a>
  </body>
</html>
