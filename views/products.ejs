<html>
  <head>
    <title>Inventory</title>
  </head>
  <body>
    <h1><%= category.name %> products</h1>
    <ul>
      <% if (locals.products) {%> <% products.forEach(function(product) { %>
      <li>
        <%= product.name %>
        <a href="/category/<%= category.id %>/update/<%= product.id %>"
          >Update</a
        >
        <form
          action="/category/<%= category.id %>/delete/<%= product.id %>"
          method="POST"
          style="display: inline"
        >
          <button
            type="submit"
            onclick="return confirm('Are you sure you want to delete this category?');"
          >
            Delete
          </button>
        </form>
      </li>
      <% }); %> <% } %>
    </ul>
    <a href="/category/<%= category.id %>/create">Add product</a>
    <a href="/">Back to categories</a>
  </body>
</html>
