<html>
  <head>
    <title>Inventory</title>
  </head>
  <body>
    <h1>Categories</h1>
    <ul>
      <% if (locals.categories) {%> <% categories.forEach(function(category) {
      %>
      <li><%= category.name %></li>
      <a href="/<%= category.id %>/update">Update</a>
      <form
        action="/<%= category.id %>/delete"
        method="POST"
        style="display: inline"
      >
        <button
          type="submit"
          onclick="return confirm('Are you sure you want to delete this category?');"
        >
          Delete
        </button>
      </form>
      <% }); %> <% } %>
    </ul>
    <a href="/create">Create a category</a>
  </body>
</html>
